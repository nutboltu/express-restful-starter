{
  "ecmaFeatures": {
    "modules": true
  },
  "env": {
    "es6": true
  },
  "extends": "eslint-config-airbnb-base",
  "settings": {
    "import/resolver": {
      "node": {
        "moduleDirectory": [
          "node_modules",
          "/"
        ]
      }
    }
  },
  "rules": {
    "id-length": [
      2,
      {
        "min": 3,
        "max": 35,
        "properties": "never",
        "exceptions": [ "_", "cb", "db","fs", "$" ]
      }
    ],
    "max-len": [ 2, 120, 2 ],
    "max-params": [ 2, 3 ],
    "no-cond-assign": [ 2, "except-parens" ],
    "quote-props": 0,
    "import/no-extraneous-dependencies": [
      "warn",
      { "devDependencies": true }
    ],
    "unicode-bom": 0
    }
}
